<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Date</th>
      <th>Value</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= expense.value %></td>
        <td><%= expense.status %></td>
        <td><%= expense.user_id %></td>
        <td>
          <% if can? :approve, Expense %>
            <%= link_to 'Aprovar', approve_expense_path(expense), method: :post %>
          <% end %>
        </td>
        <td><%= link_to 'Show', expense %></td>
        <td>
          <% if can? :edit, Expense %>
            <%= link_to 'Edit', edit_expense_path(expense) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Expense %>
  <%= link_to 'New Expense', new_expense_path %>
<% end %>
